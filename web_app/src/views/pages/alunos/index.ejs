<%- contentFor('body') %>

    <div class="container">
        <h1 class="title">
            <span class="icon-text">
                <span class="icon">
                    <i class="fas fa-users"></i>
                </span>
                <span>Alunos</span>
            </span>
        </h1>

        <% if (locals.success) { %>
            <div class="notification is-success">
                <button class="delete"></button>
                <%= success %>
            </div>
            <% } %>

                <div class="box">
                    <% if (hasPermission('CRIAR_ALUNO')) { %>
                        <div class="buttons">
                            <a href="/alunos/novo" class="button is-primary">
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Novo Aluno</span>
                            </a>
                        </div>
                        <% } %>

                            <% if (alunos && alunos.length> 0) { %>
                                <div class="table-container">
                                    <table class="table is-fullwidth is-striped is-hoverable">
                                        <thead>
                                            <tr>
                                                <th>Nome</th>
                                                <th>Email</th>
                                                <th>Telefone</th>
                                                <th>Plano</th>
                                                <th>Status</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% alunos.forEach(aluno=> { %>
                                                <tr>
                                                    <td>
                                                        <a href="/alunos/<%= aluno.id %>">
                                                            <%= aluno.nomeCompleto %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= aluno.email %>
                                                    </td>
                                                    <td>
                                                        <%= aluno.telefone %>
                                                    </td>
                                                    <td>
                                                        <%= aluno.plano?.nome || 'Sem plano' %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="tag <%= aluno.ativo ? 'is-success' : 'is-danger' %>">
                                                            <%= aluno.ativo ? 'Ativo' : 'Inativo' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="buttons are-small">
                                                            <a href="/alunos/<%= aluno.id %>"
                                                                class="button is-info is-light" title="Ver detalhes">
                                                                <span class="icon">
                                                                    <i class="fas fa-eye"></i>
                                                                </span>
                                                            </a>
                                                            <% if (hasPermission('EDITAR_ALUNO')) { %>
                                                                <a href="/alunos/<%= aluno.id %>/editar"
                                                                    class="button is-warning is-light" title="Editar">
                                                                    <span class="icon">
                                                                        <i class="fas fa-edit"></i>
                                                                    </span>
                                                                </a>
                                                                <% } %>
                                                                    <% if (hasPermission('EXCLUIR_ALUNO')) { %>
                                                                        <form action="/alunos/<%= aluno.id %>/excluir"
                                                                            method="POST" class="is-inline">
                                                                            <button type="submit"
                                                                                class="button is-danger is-light"
                                                                                title="Excluir"
                                                                                onclick="return confirm('Tem certeza que deseja excluir este aluno?')">
                                                                                <span class="icon">
                                                                                    <i class="fas fa-trash"></i>
                                                                                </span>
                                                                            </button>
                                                                        </form>
                                                                        <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <div class="notification is-info is-light">
                                        Nenhum aluno cadastrado.
                                    </div>
                                    <% } %>
                </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Funcionalidade para fechar as notificações
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;
                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>