<%- contentFor('body') %>

    <div class="container">
        <h1 class="title">
            <span class="icon-text">
                <span class="icon">
                    <i class="fas fa-user"></i>
                </span>
                <span>
                    <%= aluno.nomeCompleto %>
                </span>
            </span>
        </h1>

        <% if (locals.success) { %>
            <div class="notification is-success">
                <button class="delete"></button>
                <%= success %>
            </div>
            <% } %>

                <% if (locals.error) { %>
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        <%= error %>
                    </div>
                    <% } %>

                        <div class="box">
                            <div class="buttons">
                                <% if (hasPermission('EDITAR_ALUNO')) { %>
                                    <a href="/alunos/<%= aluno.id %>/editar" class="button is-warning">
                                        <span class="icon">
                                            <i class="fas fa-edit"></i>
                                        </span>
                                        <span>Editar</span>
                                    </a>
                                    <% } %>
                                        <% if (hasPermission('EXCLUIR_ALUNO')) { %>
                                            <form action="/alunos/<%= aluno.id %>/excluir" method="POST"
                                                class="is-inline">
                                                <button type="submit" class="button is-danger"
                                                    onclick="return confirm('Tem certeza que deseja excluir este aluno?')">
                                                    <span class="icon">
                                                        <i class="fas fa-trash"></i>
                                                    </span>
                                                    <span>Excluir</span>
                                                </button>
                                            </form>
                                            <% } %>
                                                <a href="/alunos" class="button is-light">Voltar</a>
                            </div>

                            <hr>

                            <div class="columns">
                                <div class="column">
                                    <div class="field">
                                        <label class="label">Nome Completo</label>
                                        <p>
                                            <%= aluno.nomeCompleto %>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">Email</label>
                                        <p>
                                            <%= aluno.email %>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">Telefone</label>
                                        <p>
                                            <%= aluno.telefone %>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">CPF</label>
                                        <p>
                                            <%= aluno.cpf %>
                                        </p>
                                    </div>
                                </div>

                                <div class="column">
                                    <div class="field">
                                        <label class="label">Data de Nascimento</label>
                                        <p>
                                            <%= new Date(aluno.dataNascimento).toLocaleDateString('pt-BR') %>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">Plano</label>
                                        <p>
                                            <% if (aluno.plano) { %>
                                                <%= aluno.plano.nome %> - R$ <%= aluno.plano.valor.toFixed(2) %>
                                                        <% } else { %>
                                                            Sem plano
                                                            <% } %>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">Status</label>
                                        <p>
                                            <span class="tag <%= aluno.ativo ? 'is-success' : 'is-danger' %>">
                                                <%= aluno.ativo ? 'Ativo' : 'Inativo' %>
                                            </span>
                                        </p>
                                    </div>

                                    <div class="field">
                                        <label class="label">Endereço</label>
                                        <p>
                                            <%= aluno.endereco %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <hr>

                            <% if (hasPermission('LISTAR_CHECKINS')) { %>
                                <h2 class="subtitle">
                                    <span class="icon-text">
                                        <span class="icon">
                                            <i class="fas fa-clock"></i>
                                        </span>
                                        <span>Últimos Check-ins</span>
                                    </span>
                                </h2>

                                <% if (aluno.checkins && aluno.checkins.length> 0) { %>
                                    <div class="table-container">
                                        <table class="table is-fullwidth is-striped is-hoverable">
                                            <thead>
                                                <tr>
                                                    <th>Data/Hora</th>
                                                    <th>Observação</th>
                                                    <% if (hasPermission('EXCLUIR_CHECKIN')) { %>
                                                        <th>Ações</th>
                                                        <% } %>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% aluno.checkins.forEach(checkin=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= new Date(checkin.dataHora).toLocaleString('pt-BR') %>
                                                        </td>
                                                        <td>
                                                            <%= checkin.observacao || '-' %>
                                                        </td>
                                                        <% if (hasPermission('EXCLUIR_CHECKIN')) { %>
                                                            <td>
                                                                <form action="/checkins/<%= checkin.id %>/excluir"
                                                                    method="POST" class="is-inline">
                                                                    <button type="submit"
                                                                        class="button is-small is-danger is-light"
                                                                        title="Excluir"
                                                                        onclick="return confirm('Tem certeza que deseja excluir este check-in?')">
                                                                        <span class="icon">
                                                                            <i class="fas fa-trash"></i>
                                                                        </span>
                                                                    </button>
                                                                </form>
                                                            </td>
                                                            <% } %>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="notification is-info is-light">
                                            Nenhum check-in registrado.
                                        </div>
                                        <% } %>

                                            <% if (hasPermission('CRIAR_CHECKIN')) { %>
                                                <div class="buttons">
                                                    <a href="/checkins/novo?alunoId=<%= aluno.id %>"
                                                        class="button is-primary">
                                                        <span class="icon">
                                                            <i class="fas fa-plus"></i>
                                                        </span>
                                                        <span>Novo Check-in</span>
                                                    </a>
                                                </div>
                                                <% } %>
                                                    <% } %>
                        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Funcionalidade para fechar as notificações
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;
                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>