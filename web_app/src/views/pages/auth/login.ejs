<%- contentFor('body') %>

  <div class="columns is-centered">
    <div class="column is-half">
      <div class="form-card">
        <h1 class="title has-text-centered">Login</h1>

        <% if (locals.error) { %>
          <div class="notification is-danger">
            <button class="delete"></button>
            <%= error %>
          </div>
          <% } %>

            <form action="/auth/login" method="POST">
              <div class="field">
                <label class="label">Usuário</label>
                <div class="control has-icons-left">
                  <input class="input <%= locals.error ? 'is-danger' : '' %>" type="text" name="userName"
                    placeholder="Seu nome de usuário" required value="<%= locals.userName || '' %>"
                    autocomplete="username">
                  <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <label class="label">Senha</label>
                <div class="control has-icons-left">
                  <input class="input <%= locals.error ? 'is-danger' : '' %>" type="password" name="senha"
                    placeholder="Sua senha" required autocomplete="current-password">
                  <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                  </span>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <button class="button is-primary is-fullwidth" type="submit">
                    <span class="icon">
                      <i class="fas fa-sign-in-alt"></i>
                    </span>
                    <span>Entrar</span>
                  </button>
                </div>
              </div>
            </form>
      </div>
    </div>
  </div>