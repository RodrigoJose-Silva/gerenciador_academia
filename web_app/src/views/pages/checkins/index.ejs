<%- contentFor('body') %>

    <div class="container">
        <h1 class="title">
            <span class="icon-text">
                <span class="icon">
                    <i class="fas fa-clock"></i>
                </span>
                <span>Check-ins</span>
            </span>
        </h1>

        <% if (locals.success) { %>
            <div class="notification is-success">
                <button class="delete"></button>
                <%= success %>
            </div>
            <% } %>

                <div class="box">
                    <% if (hasPermission('CRIAR_CHECKIN')) { %>
                        <div class="buttons">
                            <a href="/checkins/novo" class="button is-primary">
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Novo Check-in</span>
                            </a>
                        </div>
                        <% } %>

                            <% if (checkins && checkins.length> 0) { %>
                                <div class="table-container">
                                    <table class="table is-fullwidth is-striped is-hoverable">
                                        <thead>
                                            <tr>
                                                <th>Data/Hora</th>
                                                <th>Aluno</th>
                                                <th>Observação</th>
                                                <th>Registrado por</th>
                                                <th>Ações</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% checkins.forEach(checkin=> { %>
                                                <tr>
                                                    <td>
                                                        <%= new Date(checkin.dataHora).toLocaleString('pt-BR') %>
                                                    </td>
                                                    <td>
                                                        <a href="/alunos/<%= checkin.aluno.id %>">
                                                            <%= checkin.aluno.nomeCompleto %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= checkin.observacao || '-' %>
                                                    </td>
                                                    <td>
                                                        <%= checkin.registradoPor?.nome || 'Sistema' %>
                                                    </td>
                                                    <td>
                                                        <div class="buttons are-small">
                                                            <a href="/checkins/<%= checkin.id %>"
                                                                class="button is-info is-light" title="Ver detalhes">
                                                                <span class="icon">
                                                                    <i class="fas fa-eye"></i>
                                                                </span>
                                                            </a>
                                                            <% if (hasPermission('EXCLUIR_CHECKIN')) { %>
                                                                <form action="/checkins/<%= checkin.id %>/excluir"
                                                                    method="POST" class="is-inline">
                                                                    <button type="submit"
                                                                        class="button is-danger is-light"
                                                                        title="Excluir"
                                                                        onclick="return confirm('Tem certeza que deseja excluir este check-in?')">
                                                                        <span class="icon">
                                                                            <i class="fas fa-trash"></i>
                                                                        </span>
                                                                    </button>
                                                                </form>
                                                                <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <div class="notification is-info is-light">
                                        Nenhum check-in registrado.
                                    </div>
                                    <% } %>
                </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Funcionalidade para fechar as notificações
            (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
                const $notification = $delete.parentNode;
                $delete.addEventListener('click', () => {
                    $notification.parentNode.removeChild($notification);
                });
            });
        });
    </script>